<div class="container">
  <h1 class="my-4">Course title : {{course.title}}</h1>

  <div class="row">

    <div class="col-md-8">
      <img class="img-fluid" src="{{course.imageUrl}}" alt="{{title}}" />
    </div>

    <div class="col-md-4 text-center">
      <h3 class="my-3">Course Description</h3>
      <p>{{course.description}}</p>
      {{#if owner}}
        <form class="btn" action="/edit/{{course._id}}" method="GET">
          <input class="btn btn-warning" type="submit" value="Edit" />
        </form>

        <form class="btn" action="/delete/{{course._id}}" method="POST">
          <input class="btn btn-danger" type="submit" value="Delete" />
        </form>

      {{else}}
        {{#if enrolled}}
          <span class="enrolled-span">You are already enrolled</span>
        {{else}}
          <form class="btn" action="/enroll/{{course._id}}" method="POST">
            <input class="btn btn-primary" type="submit" value="Enroll" />
          </form>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>